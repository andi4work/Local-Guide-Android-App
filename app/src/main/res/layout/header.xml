                                android:scaleX="1.5"
                                android:scaleY="1.5"
                                android:text="@string/service_header"
                                android:textColor="@color/logoBlue"
                                android:textSize="10dp" />-->

                    <com.skydoves.powerspinner.PowerSpinnerView
                        android:id="@+id/titleService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="Service"
                        android:padding="10dp"
                        android:textColor="@color/logoBlue"
                        android:textColorHint="@color/logoBlue"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="@color/colorPrimaryDark"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_item_array="@array/services"
                        app:spinner_popup_animation="dropdown"
                        app:spinner_popup_background="@color/white"
                        app:spinner_popup_elevation="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llProperty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
